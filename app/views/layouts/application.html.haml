!!!
%html
  %head
    %title Rotten Potatoes!
    = stylesheet_link_tag 'application', 'media' => 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %h1.title Rotten Potatoes!
    
     
    #main
    
      - if !@current_user
        = button_to "Login/Sign-up", login_path, :method => :get , :id => 'signuplogin'
      
      - else 
        = button_to "Log-out", logout_path, :method => :delete, :id => 'logout'
        flash[:notice] = "Logged out"
    
      - if flash[:notice]
        #notice.flash_message= flash[:notice]
      - elsif flash[:warning]
        #warning.flash_message= flash[:warning]
      - elsif flash[:notice_user]
        #notice_user.flash_message= flash[:notice_user]
        
      
        
      = yield